<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dip"
    android:background="@drawable/loginsignup_background">

    <EditText
        android:id="@+id/username"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/signup_input"
        android:inputType="text"
        android:hint="Benutzername"
        android:textColorHint="#D3D3D3"
        android:paddingStart="10dp"
        android:paddingEnd="10dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/username"
        android:layout_marginBottom="20dp"
        android:background="@drawable/signup_input"
        android:inputType="textPassword"
        android:hint="Passwort"
        android:textColorHint="#D3D3D3"
        android:paddingStart="10dp"
        android:paddingEnd="10dp" />

    <EditText
        android:id="@+id/password_again"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/password"
        android:layout_marginBottom="20dp"
        android:background="@drawable/signup_input"
        android:inputType="textPassword"
        android:hint="Passwort wiederholen"
        android:textColorHint="#D3D3D3"
        android:paddingStart="10dp"
        android:paddingEnd="10dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/password_again"
        android:layout_marginBottom="20dp"
        android:background="@drawable/signup_input"
        android:inputType="textEmailAddress"
        android:hint="E-Mail"
        android:textColorHint="#D3D3D3"
        android:paddingStart="10dp"
        android:paddingEnd="10dp" />

    <Button
        android:id="@+id/signup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:text="@string/signupbtn"
        android:textColor="#ffffffff"
        android:background="@drawable/loginsignup_default_button_shape" />

</RelativeLayout>